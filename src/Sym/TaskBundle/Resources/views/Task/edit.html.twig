{% extends '::base.html.twig' %}
{% form_theme edit_form 'SymTaskBundle:Form:fields.html.twig' %}

{% block body -%}
    <h1>Task edit</h1>

    <form action="{{ path('task_update', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="PUT">
        {#{{ form(edit_form) }}#}
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.task) }}
        {{ form_widget(edit_form.complete) }}
        {{ form_rest(edit_form) }}
        <p>
            <button type="submit" formnovalidate=>Update</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('task') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
